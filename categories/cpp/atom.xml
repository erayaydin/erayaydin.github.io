        <title>Basit Bir SDL Projesi Oluşturma</title>
        <published>2015-09-25T17:52:00+00:00</published>
        <updated>2015-09-25T17:52:00+00:00</updated>
        
        <author>
          <name>
            
              Unknown
            
          </name>
